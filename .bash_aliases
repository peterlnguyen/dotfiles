alias harp="harp server"

alias ".."="cd .." 

alias chromium="nohup chromium --single-process &"
alias chrome="nohup chromium &"

alias hibernate="sudo pm-hibernate"
alias sleep="sudo pm-sleep"
alias suspend="sudo pm-suspend"
alias logout="kill -9 -1" 

alias du="du -h" 

alias vimrc="sudo vim ~/.vimrc"
alias "bashrc"="sudo vim ~/.bashrc"
alias aliases="vim ~/.bash_aliases"
alias "realiases"="source ~/.bash_aliases"
alias "rebash"="source ~/.bashrc"

alias gitignore="vim ~/.gitignore"
alias branches="git branch -a" 
alias status="git status"
alias diff="git diff"

alias ls="ls -a --color" 
alias grep="grep --color=always"
